<!--
   See http://stackoverflow.com/questions/11028141/ant-replace-task-not-expanding-properties-in-replacetoken-tag
 -->
<project name="javadoc_replace_headers_in_one_dir" default="help" basedir=".">

   <target name="-replace_all_javadoc_headers">
      <antcall target="-javadoc_replace_headers_in_one_dir">
         <param name="directory_to_replace" value="${dir_build_docs_javadoc}"/>
         <param name="relative_url_to_doc_root" value=""/>
      </antcall>
      <antcall target="-javadoc_replace_headers_in_one_dir">
         <param name="directory_to_replace" value="${dir_build_docs_javadoc}${cg_alit_codelet}"/>
         <param name="relative_url_to_doc_root" value="../../../../"/>
      </antcall>
      <antcall target="-javadoc_replace_headers_in_one_dir">
         <param name="directory_to_replace" value="${dir_build_docs_javadoc}${cg_alit_codelet}type${fs}"/>
         <param name="relative_url_to_doc_root" value="../../../../../"/>
      </antcall>
      <antcall target="-javadoc_replace_headers_in_one_dir">
         <param name="directory_to_replace" value="${dir_build_docs_javadoc}${cg_alit_codelet}taglet${fs}"/>
         <param name="relative_url_to_doc_root" value="../../../../../"/>
      </antcall>
      <antcall target="-javadoc_replace_headers_in_one_dir">
         <param name="directory_to_replace" value="${dir_build_docs_javadoc}${cg_alit_codelet}examples${fs}"/>
         <param name="relative_url_to_doc_root" value="../../../../../"/>
      </antcall>
      <antcall target="-javadoc_replace_headers_in_one_dir">
         <param name="directory_to_replace" value="${dir_build_docs_javadoc}${cg_alit_codelet}util${fs}"/>
         <param name="relative_url_to_doc_root" value="../../../../../"/>
      </antcall>
      <antcall target="-javadoc_replace_headers_in_one_dir">
         <param name="directory_to_replace" value="${dir_build_docs_javadoc}${cg_alit_codelet}linefilter${fs}"/>
         <param name="relative_url_to_doc_root" value="../../../../../"/>
      </antcall>
      <antcall target="-javadoc_replace_headers_in_one_dir">
         <param name="directory_to_replace" value="${dir_build_docs_javadoc}${cg_alit_codelet}simplesig${fs}"/>
         <param name="relative_url_to_doc_root" value="../../../../../"/>
      </antcall>
   </target>

   <target name="-javadoc_replace_headers_in_one_dir">
      <replace dir="${directory_to_replace}" token="@__relative_url_to_doc_root__@" value="${relative_url_to_doc_root}">
         <include name="*.html"/>
      </replace>
   </target>
</project>
