<project name="compile_main" basedir=".">

   <target name="compilehelp" description="See XBN-Java project's 'compilehelp' ant task for important information.">
      <echo>See XBN-Java project's 'compilehelp' ant task for important information.</echo>
   </target>

   <target name="jar" description="Creates the Codelet 'all' and 'core' jars.">
      <delete file="${dir_build_download_codelet_all_jar}"/>
      <delete file="${dir_build_download}${project_name_for_dir}_core.jar"/>
      <jar destfile="${dir_build_download_codelet_all_jar}"
         basedir="${build.class.dir}"
         includes="${com_github_alit}codelet${fs}**/*.class,${com_github_alit}codelet${fs}**/*.class,${com_github_alit}codelet${fs}**/*.class"
      />
      <jar destfile="${dir_build_download}${project_name_for_dir}_core.jar"
         basedir="${build.class.dir}"
         includes="${com_github_alit}codelet${fs}**/*.class"
         excludes="examples${fs}**/*.class,test${fs}**/*.class"
      />
   </target>
</project>
